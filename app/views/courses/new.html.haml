%div.container
  %div{ class: 'row justify-content-md-center' }
    %div{class: 'col-md-5'}
      %h1
        Create Course

  %div{ class: 'row justify-content-md-center' }
    %div{class: 'col-md-5'}
      = form_for(@course) do |form|
        = render partial: 'shared/forms/errors', locals: { record: @course }

        %div{class: 'form-group'}
          = form.label :title
          = form.text_field :title, { class: 'form-control' }

        = form.submit 'Create Course', { class: 'btn btn-primary mt-2' }